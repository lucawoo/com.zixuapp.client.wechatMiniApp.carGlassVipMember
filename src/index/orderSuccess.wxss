/* src/index/ordersSuccess.wxss */
page{
  background-color: #2971dd;
  min-height: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
}

.successImg{
  width: 400rpx;
	height: 150rpx;
  overflow: hidden;
  margin: 88rpx auto 70rpx;
   box-sizing: border-box;
  
}
.successImg>image{
  width: 100%;
  height: 100%;
  min-width: 100%
}










.orderListBox{
  width:100%;
	min-height: 450rpx;
	background-color: rgba(255, 255, 255, 1);
	border-radius: 10rpx;
}

.orderTop{
  padding: 30rpx 20rpx;
  box-sizing:border-box;
  min-height: 190rpx;
  border-bottom: 2rpx solid rgba(204, 204, 204, 1);
}
.orderImg{
  width: 180rpx;
	height: 130rpx;
	/* background-color: rgba(204, 204, 204, 1); */
  overflow: hidden;
  margin-right: 30rpx;
  
}
.orderImg>image{
  width: 100%;
  height: 100%;
  max-width: 100%;
}
.orderBaseInfo{
  overflow: hidden;
  color: #353535;
}
.orderPrice{
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
  
}
.orderTip{
  font-size: 22rpx;
  margin: 14rpx 0;
  line-height: 28rpx;
}
.orderText{
  font-size: 24rpx;
  color: #2971dd;

}
.orderBom{
  padding:36rpx 20rpx;
  box-sizing:border-box;
  color: #888888;
  font-size: 20rpx;

  
}
.orderList{
  line-height: 44rpx;
}