/* src/login/login.wxss */

page {
  overflow: hidden;
}

.userLogo {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto 34rpx;
  overflow: hidden;
}

.userLogo>image {
  width: 100%;
  height: 100%;
  max-width: 100%;
}

.loginBox {
  width: 100%;
  position: absolute;
  left: 50%;
  top: 250rpx;
  transform: translate(-50%, 0);
  -webkit-transform: translate(-50%, 0);
  -moz-transform: translate(-50%, 0);
  text-align: center;
  overflow: hidden;
}

.loginText {
  color: #010101;
  font-size: 26rpx;
  margin-bottom: 50rpx;
}

.loginText>view {
  line-height: 42rpx;
}

.loginBox button {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: rgba(26, 172, 25, 1);
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #fff;
}
