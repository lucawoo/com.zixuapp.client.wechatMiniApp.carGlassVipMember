/* src/my/my.wxss */
page{
  background-color: #f6f6f6;
  min-height: 100%;
  padding: 30rpx;
  box-sizing:border-box;
}
.orderListBox{
  width:100%;
	min-height: 450rpx;
	background-color: rgba(255, 255, 255, 1);
	border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.orderTop{
  padding: 30rpx 20rpx;
  box-sizing:border-box;
  min-height: 190rpx;
  border-bottom: 2rpx solid rgba(204, 204, 204, 1);
}
.orderImg{
  width: 180rpx;
	height: 130rpx;
  overflow: hidden;
  margin-right: 30rpx;
  
}
.orderImg>image{
  width: 100%;
  height: 100%;
  max-width: 100%;
}
.orderBaseInfo{
  overflow: hidden;
  color: #353535;
}
.orderPrice{
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 14rpx;
  
}
.orderTip{
  font-size: 22rpx;
  margin: 14rpx 0;
  line-height: 28rpx;
}
.orderText{
  font-size: 24rpx;
  color: #2971dd;

}
.orderBom{
  padding:36rpx 20rpx;
  box-sizing:border-box;
  color: #888888;
  font-size: 20rpx;

  
}
.orderList{
  line-height: 44rpx;
}