/* src/my/index.wxss */

page {
  background-color: #f6f6f6;
  min-height: 100%;
}

.userInfo {
  width: 100%;
  min-height: 368rpx;
  background-color: #2971dd;
  text-align: center;
  padding: 60rpx 24rpx 0 24rpx;
  box-sizing: border-box;
  color: #fff;
}

.userImg {
  width: 130rpx;
  height: 130rpx;
  background-color: rgba(238, 226, 226, 1);
  border-radius: 50%;
  border: solid 1px rgba(238, 238, 238, 1);
  overflow: hidden;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 25rpx;
}

.userImg>image {
  width: 100%;
  height: 100%;
  max-width: 100%;
}

.userText {
  font-size: 30rpx;
}

.userTell {
  font-size: 24rpx;
  margin-top: 6rpx;
}

.userListBox {
  width: 690rpx;
  min-height: 280rpx;
  background-color: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  border: solid 1px rgba(238, 238, 238, 1);
  margin: -40rpx auto 0;
}

.userList {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  min-height: 140rpx;
  padding: 0 24rpx 0 38rpx;
  font-size: 30rpx;
  color: #353535;
  border-bottom: 1px solid #ccc;
}

.userList .icon-youjiantou {
  font-size: 42rpx;
  color: rgba(191, 191, 191, 1);
}

.userList .icon-dingdan, .userList .icon-serve {
  font-size: 34rpx;
  margin-right: 42rpx;
  color: #bfbfbf;
}

button[plain] {
  border: none;
}
